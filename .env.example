# Supabase PostgreSQL Connection
# Pooled connection (for serverless/edge)
DATABASE_URL="postgresql://postgres.[project-ref]:[password]@aws-0-[region].pooler.supabase.com:6543/postgres?pgbouncer=true"

# Direct connection (for migrations)
DIRECT_URL="postgresql://postgres.[project-ref]:[password]@aws-0-[region].pooler.supabase.com:5432/postgres"

# Supabase Storage
NEXT_PUBLIC_SUPABASE_URL="https://[project-ref].supabase.co"
SUPABASE_SERVICE_KEY="your-service-role-key"

# Admin Authentication
ADMIN_EMAIL="admin@setupsgrid.com"

# Use ADMIN_PASSWORD para desenvolvimento (texto plano)
# Use ADMIN_PASSWORD_HASH em produção (hash SHA-256)
# Para gerar o hash, use: generatePasswordHash("sua-senha") em lib/auth.ts
ADMIN_PASSWORD="your-secure-password-min-8-chars"
# ADMIN_PASSWORD_HASH="hash-sha256-da-sua-senha"

# JWT Secret (mínimo 32 caracteres)
# Gere com: openssl rand -base64 32
AUTH_SECRET="your-secret-key-min-32-chars-for-jwt-signing"
